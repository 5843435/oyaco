<div class="modal-dialog"> <!-- Modalダイアログ部分 -->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>  <!-- closeボタン -->
      <h4 id="input_note_title" class="modal-title"><%= @event.name %>のメモを追加</h4>
    </div>
    <div class="modal-body">
      <%= render "form" %>
      <table class="table">
      <% @notes.order('id desc').each do |note| %>
        <tr>
          <td><%= note.body %></td>
          <td><%= image_tag(note.image.thumb.url) if note.image.present? %></td>
          <td><%= link_to '削除する', users_note_path(note), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
