<section class="question container-fluid" id="question">
  <div class="jumbotron">
    <%= form_for(@q, url: wizard_path, html: {method: :put, id: "question-form"}) do |f| %>
    <div class="form-group">
      <h1><%= f.label(:tel, "あなたのご両親の電話番号は？", class: "control-label") %></h1>
      <p>
        <div class="row">
          <div class="col-xs-offset-4 col-xs-4">
            <%= f.telephone_field(:tel, placeholder: "00-0000-0000", pattern: "^[0-9\-]+$", class: "form-control") %>
          </div>
        </div>
      </p>
      <p>
        <%#link_to 'スキップ', next_wizard_path, class:"btn btn-success btn-default" %>
        <%=link_to 'ひとつ戻る', previous_wizard_path, class:"btn btn-success btn-default" %>
        <%= f.submit("次へ", id: "next", class: "btn btn-success btn-default") %>
      </p>
    <% end %>
    </div>
  </div>

  <div class="progress progress-striped active">
    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="60" class="progress-bar progress-bar-success" role="progressbar" style="width: 60%;">
      <span class="sr-only">60% Complete</span>
    </div>
  </div>
</div>
</section>
