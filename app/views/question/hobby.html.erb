<section class="question container-fluid" id="question">
  <div class="jumbotron">
    <%= form_for(@q, url: wizard_path, html: {method: :put, id: "question-form"}) do |f| %>
    <div class="form-group">
      <h1><%= f.label(:hobby, "あなたのご両親の趣味は？", class: "control-label") %></h1>
      <p>
        <div class="row">
          <div class="col-xs-offset-4 col-xs-4">
            <%= f.text_field(:hobby, class: "form-control") %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-offset-4 col-xs-4">
            <%= f.text_field(:hobby2, class: "form-control") %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-offset-4 col-xs-4">
          <%= f.text_field(:hobby3, class: "form-control") %>
        </div>
      </div>
      </p>
      <p>
        <%=link_to 'ひとつ戻る', previous_wizard_path, id:"backword",class:"btn btn-success btn-default" %>
        <%= f.submit("相談する", id: "go-home", class: "btn btn-success btn-default") %>
      </p>
    <% end %>
    </div>
  </div>

  <div class="progress progress-striped active">
    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="80" class="progress-bar progress-bar-success" role="progressbar" style="width: 80%;">
      <span class="sr-only">80% Complete</span>
    </div>
  </div>
</div>
</section>
