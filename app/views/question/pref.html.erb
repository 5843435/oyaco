<%= form_for(@questionnaire, url: next_wizard_path, method: "put", :html => {:id => "question-form"}) do |f| %>
<div class="form-group">
  <%= label_tag(:pref_id, "あなたのご両親のお住まいは？", class: "col-sm-6 control-label") %>
  <div class="col-sm-4">
    <%= select_tag(:pref_id, options_from_collection_for_select(JpPrefecture::Prefecture.all, :code, :name, cookies.signed[:pref_id] ||= "1"),
         class: "form-control", style: "display: inline-block; width: auto") %>
  </div>
</div>
<%= submit_tag("次の質問", id: "next", class: "btn btn-success btn-default") %>
<% end %>
<%= link_to 'スキップ', next_wizard_path, class:"btn btn-success btn-default" %>
