<section class="question container-fluid" id="question">
  <div class="jumbotron">
    <%= form_for(@q, url: wizard_path, html: {method: :put, id: "question-form"}) do |f| %>
    <div class="form-group">
      <h1><%= f.label(:pref_id, "あなたのご両親のお住まいは？", class: "control-label") %></h1>
      <p>
        <%= f.collection_select :pref_id, JpPrefecture::Prefecture.all, :code, :name,
        class: "form-control", style: "display: inline-block; width: auto" %>
      </p>
      <p>
        <%#link_to 'スキップ', next_wizard_path, class:"btn btn-success btn-default" %>
        <%= f.submit("次へ", id: "next", class: "btn btn-success btn-default") %>
      </p>
    <% end %>
    </div>
  </div>

  <div class="progress progress-striped active">
    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="40" class="progress-bar progress-bar-success" role="progressbar" style="width: 40%;">
      <span class="sr-only">40% Complete</span>
    </div>
  </div>
</div>
</section>
