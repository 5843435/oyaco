<%= render layout: 'form' do |f| %>
  <h2><%= f.label(:dad, "お父さんの誕生日は？", class: "control-label") %></h2>
  <p>
    <%= f.date_select(:dad, { start_year: 1900, end_year: Time.current.year, include_blank: true, selected: selected_birthday(:dad),
      use_month_numbers: true, date_separator: '/' },
      class: "form-control input-lg", style: "display: inline-block; width: auto") %>
  </p>
<% end %>
